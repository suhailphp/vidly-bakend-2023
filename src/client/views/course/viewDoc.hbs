<style>
    .timeline-label .timeline-label {
        width: 150px;
    }
    .timeline-label:before{
        left: 151px;
        right: 151px;
    }
</style>
<div class="modal-content">
    <div class="modal-header">
        <div class="d-flex align-items-center">
            <div class="d-flex align-items-center flex-grow-1">
                <div class="symbol symbol-45px me-5">
                    <img alt="" class="w-30px me-3" src="{{CONFIG.BASE_URL}}dist/assets/media/svg/files/{{data.fileType}}.svg" />
                </div>
                <div class="d-flex flex-column">
                    <a class="text-gray-900 text-hover-primary fs-6 fw-bold">{{data.fileName}}</a>
                    <div class="badge badge-sm badge-light-primary d-inline">{{#if data.createdOn}}{{dateToStringSimple data.createdOn}}{{/if}}</div>
                </div>
            </div>
        </div>

        <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
           <span class="svg-icon svg-icon-1">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
                    <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
                </svg>
            </span>
        </div>
    </div>

    <div class="modal-body">
        {{#compare data.fileType '===' 'application/pdf'}}
            <object
                    width="100%"
                    height="700px"
                    type="application/pdf"
                    data="{{CONFIG.BASE_URL}}course/{{data.documentID}}/document#toolbar=2&navpanes=0&scrollbar=0">
                <canvas id="the-canvas"></canvas>
            </object>
        {{else}}
            <img style="height:auto;width:450px"  src="{{CONFIG.BASE_URL}}course/{{data.documentID}}/document" />
        {{/compare}}
        
    </div>


  
</div>
